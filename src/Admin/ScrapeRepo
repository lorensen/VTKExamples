# Initialize counts
cacheHits = 0
cacheMisses = 0

cxxCount = 0
csCount = 0
pyCount = 0
javaCount = 0

thumbCount = 0
doxyCount = 0

# Make sure the wiki docs folder exists
if not os.path.exists("docs"):
    os.makedirs("docs")

# Baseline top level
BaselineName = RepoDir + "/Testing/Baseline"

# Load the TinyUrl cache
CacheFile = RepoDir + "/Admin/TinyUrlCache"
